<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-light bg-dark p-4 mb-0">新規投稿</h5>
      <div class="form-body p-4">

        <% if @cosmetic.errors.any? %>
          <ul class="alert alert-danger" role="alert">
            <h6 class="alert-heading">
              <%= @cosmetic.errors.count %>件のエラーが発生しました
            </h6>
            <% @cosmetic.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

  <%= form_with model: @cosmetic do |f| %>
    <%= f.file_field :image, accept: "image/*", class: "w-100" %>
    <div class="input-group mb-3 mt-4">
      <div class="input-group-prepend">
        <span class="input-group-text" aria-hidden="true"><i class="fa fa-ribbon"></i></span>
      </div>
        <%= f.text_field :item, class:"form-control",placeholder:"アイテム名" %>
    </div>
    <div class="input-group mb-3 mt-4">
      <div class="input-group-prepend">
        <span class="input-group-text" aria-hidden="true"><i class="fa fa-bookmark"></i></span>
      </div>
        <%= f.text_area :description, class:"form-control", rows:"3", placeholder:"説明を入力..."  %>
    </div>
    <div class="field" id="star">
      <%= f.label :evaluation, "星評価：" %>
      <%= f.hidden_field :evaluation, id: :review_star %>
      <script>
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          scoreName: 'cosmetic[evaluation]',
          half: true,
        });
      </script>
    </div>
      <hr>
        <%= f.submit '投稿する', class:"btn btn-lg btn-block btn-black btn-secondary mt-4" %>
      <% end %>
      </div>
    </div>
  </div>
</div>