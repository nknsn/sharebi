<div>
  <%= form_with model: @user do |f| %>

    <%= f.text_field :name, autofocus: true, :placeholder => "ユーザー名", class: "input" %>

    <%= f.email_field :email, autocomplete: "email", :placeholder => "メールアドレス", class: "input" %>


    <%= f.password_field :password, :placeholder => "パスワード(6文字以上)", class: "input" %>

    <%= f.password_field :password_confirmation, :placeholder => "パスワード(確認用)", class: "input" %>

    <%= f.submit "新規登録" %>

  <% end %>
</div>